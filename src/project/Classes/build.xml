<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build">
	<path id="build.classpath">
		<pathelement location="classes"/>
	</path>
	<target name="init">
		<mkdir dir="classes"/>
	</target>
	<target name="clean">
		<delete dir="classes"/>
	</target>
	<target depends="init" name="build">
		<javac srcdir="." destdir="classes" source="1.5" target="1.5" fork="yes">
			<classpath refid="build.classpath"/>
			<include name="Produit_principal.java"/>
			<include name="Composition.java"/>
			<include name="APasCher.java"/>
			<include name="Commande.java"/>
			<include name="Utilisateur.java"/>
			<include name="Preference.java"/>
			<include name="Allergene.java"/>
			<include name="Ingredient.java"/>
			<include name="Accompagnement.java"/>
			<include name="Menu.java"/>
			<include name="Boisson.java"/>
			<include name="Promotion.java"/>
			<include name="Item.java"/>
		</javac>
	</target>
</project>